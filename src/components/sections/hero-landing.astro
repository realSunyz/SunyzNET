---
import { cn } from "@/lib/utils";
import { buttonVariants } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
import { siteConfig } from "@/config/site";
---

<section class="space-y-6 py-12 sm:py-20 lg:py-20">
  <div class="container flex max-w-5xl flex-col items-center gap-5 text-center">
    <a
      href="https://status.sunyz.net"
      class={cn(
        buttonVariants({ variant: "outline", size: "sm", rounded: "full" }),
        "px-4"
      )}
      target="_blank"
    >
      <span class='mr-3 relative flex items-center justify-center'>
        <span
          class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
        ></span>
        <span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
      </span>
      Service Status
    </a>

    <h1
      class="text-balance font-heading text-4xl sm:text-5xl md:text-6xl lg:text-[66px]"
    >
      Fast. Global. Reliable. Try{" "}
      <span class="text-gradient_indigo-purple font-extrabold">
        SunyzNET
      </span>
    </h1>

    <p
      class="max-w-2xl text-balance leading-normal text-muted-foreground sm:text-xl sm:leading-8"
    >
      An experimental global network designed for education and research purposes, with ASN 150289 allocated by APNIC.
    </p>

    <div class="flex justify-center space-x-2 md:space-x-4">
      <a
        href="/docs/about"
        class={cn(buttonVariants({ size: "lg", rounded: "full" }), "gap-2")}
      >
        <span>Knowledge Base</span>
        <Icon name="lucide:arrow-right" class="size-4" />
      </a>
      <a
        href={siteConfig.links.email}
        target="_blank"
        rel="noreferrer"
        class={cn(
          buttonVariants({
            variant: "outline",
            size: "lg",
            rounded: "full",
          }),
          "px-5"
        )}
      >
        <Icon name="email" class="mr-2 size-4" />
        <p>
          Contact{" "}<span class="hidden sm:inline-block">Us</span> 
        </p>
      </a>
    </div>
  </div>
</section>
